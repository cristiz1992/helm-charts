{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "externals": {
      "description": "List of external services",
      "items": {
        "type":"object",
        "properties": {
          "name": {
            "type":"string",
            "description": "Name of the service"
          },
          "externalName": {
            "type":"string",
            "description": "FQDN of external service"
          },
          "ips": {
            "type":"array",
            "description": "IPs of instances",
            "items": {
              "type":"string"
            }
          },
          "ingressRoute": {
            "type":"object",
            "properties": {
              "enable": {
                "type":"boolean"
              },
              "ssl": {
                "type":"boolean"
              },
              "sslOption": {
                "type": ["null", "object"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "TLSOption name"
                  },                  
                  "namespace": {
                    "type": "string",
                    "description": "TLSOption namespace where it was created."
                  }
                },
                "required": ["name", "namespace"]
              },
              "allowInsecureSSL": {
                "type":"boolean",
                "description": "If scheme is https and the external service ssl certificate is self signed then set to true, otherwise false."
              },
              "host": {
                "type":"string"
              },
              "port": {
                "type":"integer"
              },
              "scheme": {
                "enum":["http","https"]
              },
              "entryPoints": {
                "type":"array",
                "items": {
                  "type":"string"
                }
              },
              "healthCheck": {
                "type":"object",
                "properties": {
                  "enable": {"type":"boolean"},
                  "path": {"type":"string"},
                  "interval": {"type": "string"},
                  "timeout": {"type": "string"}
                },
                "required": ["enable", "path"]
              }
            },
            "required": ["host","port","scheme","enable"]
          }
        }
      },
      "type": "array",
      "minItems": 1,
      "required": ["name"]
    }
  },
  "required": [
    "externals"
  ],
  "title": "Values",
  "type": "object"
}